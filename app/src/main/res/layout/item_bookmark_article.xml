<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_bookmark_article_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_article_representative_img"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImg"
        tools:background="@color/gray" />

    <TextView
        android:id="@+id/tv_bookmark_title"
        style="@style/App.TextTitle18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bookmark_article_img"
        app:layout_goneMarginTop="8dp"
        tools:text="Nurse becomes a living organ donor for her mom - twice" />

    <TextView
        android:id="@+id/tv_bookmark_article_publish_date"
        style="@style/App.TextBody12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_title"
        tools:text="2023/12/25" />


</androidx.constraintlayout.widget.ConstraintLayout>